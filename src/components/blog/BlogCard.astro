---
const { article, tags, link } = Astro.props

const planets = ["Mercury", "Venus", "Earth", "Mars", "Jupiter"]
const coding = ["Python", "R", "Javascript", "React", "Next JS", "Astro", "Go", "C", "C++"]

const codingTags = tags.filter((tag) => coding.includes(tag));
const planetTags = tags.filter((tag) => planets.includes(tag)); 

---
 
<article class="">
<a href={`/${link}`}>
  <div class="my-4 justify-center md:w-full group sm:flex space-x-6 shadow-lime-500/20 shadow-2xl hover:rounded-2xl">
    <img class="mx-auto w-full md:w-1/2 h-40 md:h-80 object-fill" alt="art cover" loading="lazy" src={`${article.image.filename}`} />
    <div class="sm:w-8/12">
        <h1 class="text-md">
            {article.title}
        </h1>
        <div class="my-3">
      {
          codingTags.map((tag) => <span class="bg-red-100 text-red-800 text-sm font-medium me-2 px-2.5 py-1 rounded dark:bg-red-900 dark:text-red-300">{tag}</span>)

      }
      {
          planetTags.map((tag) => <span class="bg-green-100 text-green-800 text-sm font-medium me-2 px-2.5 py-1 rounded dark:bg-green-900 dark:text-green-300">{tag}</span>)

      }
        </div>
        <div class="p-2">
          <p class="text-white">{article.description}</p>
        </div>
    </div>
  </div>
</a>
</article>