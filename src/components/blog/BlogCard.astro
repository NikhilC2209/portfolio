---
const { article, tags, link } = Astro.props

const football = ["Football", "Arsenal", "Barcelona", "Liverpool", "Man City"]
const coding = ["Python", "R", "Javascript", "React", "Next JS", "Astro", "Go", "C", "C++"]

const codingTags = tags.filter((tag) => coding.includes(tag));
const footballTags = tags.filter((tag) => football.includes(tag)); 

---
 
<article class="">
<a href={`/${link}`}>
  <div class="my-4 justify-center transition ease-in-out duration-300 hover:scale-110 md:w-full group sm:flex space-x-6 hover:shadow-[-1px_-1px_20px_6px_rgba(15,255,80,_0.2)] backdrop-blur-md shadow-2xl">
    <img class="mx-auto w-full md:w-1/2 h-40 md:h-80 object-fill" alt="art cover" loading="lazy" src={`${article.image.filename}`} />
    <div class="sm:w-8/12">
        <h1 class="text-md my-4 mr-3">
            {article.title}
        </h1>
        <div class="my-3">
      {
          codingTags.map((tag) => <span class="bg-red-100 text-red-800 text-sm font-medium me-2 px-2.5 py-1 rounded dark:bg-red-900 dark:text-red-300">{tag}</span>)

      }
      {
          footballTags.map((tag) => <span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">{tag}</span>)

      }
        </div>
        <div class="p-2">
          <p class="text-white">{article.description}</p>
        </div>
    </div>
  </div>
</a>
</article>